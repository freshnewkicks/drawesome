{
  "name": "remix-template-fly",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "deploy": "fly deploy --remote-only",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "push": "git push origin dev; gh pr create; gh pr merge; npm run build; npm run deploy",
    "env": "node -r dotenv/config node_modules/.bin/remix dev"
  },
  "dependencies": {
    "@emailjs/browser": "^3.6.2",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@headlessui/react": "^1.6.4",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "dotenv": "^16.0.1",
    "prevent-pull-refresh": "^1.0.6",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-countdown": "^2.3.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-touch-events": "^3.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.0.24"
  },
  "engines": {
    "node": ">=14"
  }
}
